<% cocktail_recipes.each do |cocktail_recipe| %> 
    <div class="jumbotron">  
    <h2><%= link_to cocktail_recipe.title, cocktail_recipe_path(cocktail_recipe)%></h2> 
    <hr class="my-4">
    <br><%= image_tag cocktail_recipe.avatar.url(:medium)%></br><br>
      <h4>Category: <%= link_to cocktail_recipe.category.name, category_path(cocktail_recipe.category)%></h4> 
      <h4><%= cocktail_recipe.description %></h4> 
      <small>By: <%=link_to cocktail_recipe.user.username, user_path(cocktail_recipe.user) %> on <%= created_at cocktail_recipe %></small><br> 
      </div>
    <% end %> 