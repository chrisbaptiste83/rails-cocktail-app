      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">The Cantina</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to('Home', '/users/show') %>Home</li>
            <li><%= link_to('Login', new_user_session_path) %>Login</li>
            <li><%= link_to('Sign Up', new_user_registration_path)%>Sign Up</li> 
            <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %>Log Out</li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      <div class="starter-template">
      <nav> 
      <% if user_signed_in? %>  
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
      <%= link_to('View all Cocktail Recipes', cocktail_recipes_path)%> 
      <%= link_to('View all Cocktail Recipes by Categories', categories_path) %>
      <%= link_to('Create a Cocktail Recipe', new_cocktail_recipe_path) %> 
      <%= link_to('Your Profile Page', '/users/show') %>
      
      </nav> 
      
    <% end %> 
    
        <%= yield %> 
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      
      </div>

    </div><!-- /.container -->


