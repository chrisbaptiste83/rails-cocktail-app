  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">The Cantina</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active">Home</li>
            <li><%= link_to('Login', new_user_session_path) %>Login</li>
            <li><%= link_to('Sign Up', new_user_registration_path)%>Sign Up</li> 
            <%if user_signed_in?%>
            <li><%= link_to('All Recipes', cocktail_recipes_path)%></li> 
            <li><%= link_to('Categories', categories_path)%></li> 
            <li><%= link_to('Create a Cocktail Recipe', new_cocktail_recipe_path) %></li> 
            <li><%= link_to('All Ingredients', ingredients_path)%></li> 
            <li><%= link_to "Profile Page", current_user %></li> 
            <%end%>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav> 

    

    <div class="container">

      <div class="starter-template">
      
      
    
      <div class="jumbotron">
      <div class="container"> 

        <%= yield %> 
        
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p> 

        </div>
        </div>
      </div> 

    </div><!-- /.container -->


    <%if user_signed_in?%>
    <center><h2><%= button_to('Logout', destroy_user_session_path, method: :delete) %></h2></center>
    <%end%> 


